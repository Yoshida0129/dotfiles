{
    "explorer.confirmDragAndDrop": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Rainbow Contrast (rainglow)",
    "workbench.editor.enablePreview": false,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "workbench.editor.showTabs": true,
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "window.zoomLevel": -1,
      /*Html, JavaScript, Vue*/
  "files.associations": {
    "*.vue": "vue"
  },
  // vueにcssのemmet追加
  "emmet.syntaxProfiles": {
    "vue": "css"
  },
  // vueだけで追加したい設定
  "[vue]": {
    "editor.formatOnSave": false
  },
  "eslint.enable": true,
  // 適応するファイルタイプを決定
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  // プロジェクト配下のeslintrc.jsを読み込み
  "eslint.options": {
    "configFile": ".eslintrc.js"
  },
  // 保存時に自動フォーマット
  "eslint.autoFixOnSave": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "vetur.validation.script": false,
  "vetur.validation.style": false,
  "vetur.validation.template": false,
  "javascript.format.enable": false,
  
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "go.gopath": "/Users/yoshidatatsuya/go",
  "emmet.includeLanguages": {
    "erb": "html",
  },
  "files.autoSave": "onFocusChange",
  "dart.flutterSdkPath": "/Users/yoshidatatsuya/flutter",
  "window.titleBarStyle": "native",

  "vim.normalModeKeyBindings": [
    {
      "before": ["<Up>"],
      "after": ["<Nop>"]
    },
    {
      "before": ["<Down>"],
      "after": ["<Nop>"]
    },
    {
      "before": ["<Left>"],
      "after": ["<Nop>"]
    },
    {
      "before": ["<Right>"],
      "after": ["<Nop>"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j","j"],
      "after": ["<Esc>"]
    }
  ],
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vsicons.dontShowNewVersionMessage": true,
  "html.mirrorCursorOnMatchingTag": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/Users/yoshidatatsuya/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
  "java.refactor.renameFromFileExplorer": "autoApply",
  "java.semanticHighlighting.enabled": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  }

}